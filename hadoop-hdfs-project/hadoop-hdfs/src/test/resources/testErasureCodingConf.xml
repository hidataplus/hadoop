      <description>help: help for erasure coding command</description>
      <test-commands>
        <ec-admin-command>-help</ec-admin-command>
      </test-commands>
      <cleanup-commands>
      </cleanup-commands>
      <comparators>
        <comparator>
          <type>SubstringComparator</type>
          <expected-output>[-listPolicies]</expected-output>
        </comparator>
        <comparator>
